<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_controlling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <!-- Beban 1 -->
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_beban1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_margin="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView android:layout_margin="20dp" android:layout_width="30dp" android:layout_height="30dp"
                        android:src="@drawable/ic_lights" />

                    <TextView
                        android:layout_margin="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Flood Light 1"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>


                <Space android:layout_width="wrap_content" android:layout_height="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Status : "
                        android:textColor="@android:color/black"
                        android:textSize="20sp" android:layout_marginStart="10dp"
                        />
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/beban1_btn"
                        android:textSize="20sp"
                        android:switchTextAppearance="@style/SwitchTextAppearance"
                        >
                    </androidx.appcompat.widget.SwitchCompat>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Lampu -->
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_beban2"
            android:layout_below="@+id/card_beban1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView android:layout_margin="20dp" android:layout_width="30dp" android:layout_height="30dp"
                        android:src="@drawable/ic_lights" />

                    <TextView
                        android:layout_margin="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Flood Light 2"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <Space android:layout_width="wrap_content" android:layout_height="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Status : "
                        android:textColor="@android:color/black"
                        android:textSize="20sp" android:layout_marginStart="10dp"
                        />
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/beban2_btn"
                        android:textSize="20sp"
                        android:switchTextAppearance="@style/SwitchTextAppearance"
                        >

                    </androidx.appcompat.widget.SwitchCompat>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Lampu Teras -->
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_beban3"
            android:layout_below="@+id/card_beban2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView android:layout_margin="20dp" android:layout_width="30dp" android:layout_height="30dp"
                        android:src="@drawable/ic_lights" />

                    <TextView
                        android:layout_margin="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Flood Light 3"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>


                <Space android:layout_width="wrap_content" android:layout_height="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Status : "
                        android:textColor="@android:color/black"
                        android:textSize="20sp" android:layout_marginStart="10dp"
                        />
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/beban3_btn"
                        android:textSize="20sp"
                        android:switchTextAppearance="@style/SwitchTextAppearance"
                        >

                    </androidx.appcompat.widget.SwitchCompat>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TV -->
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_beban4"
            android:layout_below="@+id/card_beban3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView android:layout_margin="20dp" android:layout_width="30dp" android:layout_height="30dp"
                        android:src="@drawable/ic_lights" />

                    <TextView
                        android:layout_margin="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Flood Light 4"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <Space android:layout_width="wrap_content" android:layout_height="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Status : "
                        android:textColor="@android:color/black"
                        android:textSize="20sp" android:layout_marginStart="10dp"
                        />
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/beban4_btn"
                        android:textSize="20sp"
                        android:switchTextAppearance="@style/SwitchTextAppearance"
                        >

                    </androidx.appcompat.widget.SwitchCompat>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</ScrollView>